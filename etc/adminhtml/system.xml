<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="developerhub" translate="label" sortOrder="999999" class="devhub-tab ambase-tab-container">
            <label>DeveloperHub</label>
        </tab>
        <section id="stock_status" translate="label" type="text" sortOrder="32101" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Stock Status</label>
            <tab>developerhub</tab>
            <resource>DeveloperHub_StockStatus::config</resource>
            <group id="stock_status_information" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Stock Indicator Configuration</label>
                <field id="is_enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="plp" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Stock Indicator For Product List Pages</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="link" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Link Label To Display Stock Status PopUp On Product List Pages</label>
                </field>
            </group>
        </section>
    </system>
</config>
